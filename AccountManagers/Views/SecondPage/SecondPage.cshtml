@model AccountManagers.ViewModels.SecondPageViewModel

@{
    Layout = "~/Views/_BasicLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>SecondPage</title>
</head>
<body>
<div>
    <h2>Extended registration</h2>
    @using (Html.BeginForm())
    {
        @Html.Label("Gender: ")
        <br/>
        @Html.CheckBoxFor(m => m.Sex, new {@class = "ch", @value = true })
        @*@Html.CheckBox("Male", true, new {@class = "ch", @value = Boolean.TrueString})*@
        @Html.Label("Male")
        <br/>
        @Html.CheckBoxFor(m => m.Sex, new { @class = "ch", @value = false })
        @*@Html.CheckBox("Female", false, new { @class = "ch", @value = Boolean.FalseString })*@
        @Html.Label("Female")
        <br/>
        <br/>
        @Html.Label("Select your home country: ")
        @Html.DropDownListFor(m => m.SelectedCountryId, new SelectList(Model.Countries, "Id", "CountryName"))
        <br/>
        <hr/>
        @Html.ActionLink("Back", "Index", "Home")
        <input type="submit" value="Next" name="next" id="next"/>
    }
</div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {

        $(".ch").change(function() {
            $(".ch").prop('checked', false);
            $(this).prop('checked', true);
        });
    });
    </script>
</body>
</html>
